# PODNAME: vdd
# ABSTRACT: The Vim Debugger Daemon

use strict;
use warnings;
use Vim::Debug::Daemon;

$SIG{INT} = \&signalHandler;

Vim::Debug::Daemon->new->run;

# die when children die
sub signalHandler {
   exit;
}

__END__
