#!/usr/bin/env perl
# PODNAME: vdd
# ABSTRACT: The Vim Debugger Daemon
our $VERSION = '0.901'; # VERSION

use strict;
use warnings;
use Vim::Debug::Daemon;

$SIG{INT} = \&signalHandler;

Vim::Debug::Daemon->new->run;

# die when children die
sub signalHandler {
   exit;
}

__END__

=pod

=encoding utf-8

=head1 NAME

vdd - The Vim Debugger Daemon

